{
  "name": "weather-provider",
  "version": "0.1.0",
  "description": "Weather Provider package for Weather Vortex project",
  "files": [
    "lib/**/*"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf lib/",
    "format": "prettier --write \"src/**/*.ts\" \"src/**.*.js\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" .",
    "lint:fix": "eslint --fix \"{src,apps,libs,test}/**/*.ts\" -c .eslintrc.js",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint && npm test",
    "preversion": "npm run lint",
    "test": "jest --config jestconfig.json",
    "version": "npm run format && git add -A src"
  },
  "keywords": [
    "weather",
    "vortex",
    "provider",
    "forecast"
  ],
  "author": {
    "email": "daniele.tentoni.1996@gmail.com",
    "name": "Daniele Tentoni",
    "url": "https://github.io/Daniele-Tentoni"
  },
  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "@types/jest": "28.1.0",
    "@types/node": "17.0.7",
    "@typescript-eslint/eslint-plugin": "5.27.0",
    "@typescript-eslint/parser": "5.27.0",
    "eslint": "8.16.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-prefer-arrow": "1.2.3",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-unicorn": "42.0.0",
    "jest": "28.1.0",
    "nock": "13.2.6",
    "prettier": "2.6.2",
    "ts-jest": "28.0.4",
    "tslint-config-prettier": "1.18.0",
    "typescript": "4.7.3"
  }
}
